{
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/Auth/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5053
                }
            ],
            "UpstreamPathTemplate": "/api/identity/{everything}",
            "UpstreamHttpMethod": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ],
            "Key": "identity-service",
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "1m",
                "PeriodTimespan": 60,
                "Limit": 100
            }
        },
        {
            "DownstreamPathTemplate": "/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5187
                }
            ],
            "UpstreamPathTemplate": "/api/users/{everything}",
            "UpstreamHttpMethod": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ],
            "Key": "user-service",
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Bearer"
            },
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "1m",
                "PeriodTimespan": 60,
                "Limit": 200
            }
        },
        {
            "DownstreamPathTemplate": "/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5098
                }
            ],
            "UpstreamPathTemplate": "/api/posts/{everything}",
            "UpstreamHttpMethod": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ],
            "Key": "post-service",
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Bearer"
            },
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "1m",
                "PeriodTimespan": 60,
                "Limit": 300
            }
        },
        {
            "DownstreamPathTemplate": "/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5032
                }
            ],
            "UpstreamPathTemplate": "/api/social/{everything}",
            "UpstreamHttpMethod": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ],
            "Key": "social-service",
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "Bearer"
            },
            "RateLimitOptions": {
                "EnableRateLimiting": true,
                "Period": "1m",
                "PeriodTimespan": 60,
                "Limit": 200
            }
        }
    ],
    "SwaggerEndPoints": [
        {
            "Key": "identity-service",
            "Config": [
                {
                    "Name": "Identity API",
                    "Version": "v1",
                    "Url": "http://localhost:5053/swagger/v1/swagger.json",
                    "RoutePrefix": "identity"
                }
            ]
        },
        {
            "Key": "user-service",
            "Config": [
                {
                    "Name": "User API",
                    "Version": "v1",
                    "Url": "http://localhost:5187/swagger/v1/swagger.json",
                    "RoutePrefix": "users"
                }
            ]
        },
        {
            "Key": "post-service",
            "Config": [
                {
                    "Name": "Post API",
                    "Version": "v1",
                    "Url": "http://localhost:5098/swagger/v1/swagger.json",
                    "RoutePrefix": "posts"
                }
            ]
        },
        {
            "Key": "social-service",
            "Config": [
                {
                    "Name": "Social API",
                    "Version": "v1",
                    "Url": "http://localhost:5032/swagger/v1/swagger.json",
                    "RoutePrefix": "social"
                }
            ]
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "https://localhost:7200",
        "RateLimitOptions": {
            "DisableRateLimitHeaders": false,
            "QuotaExceededMessage": "Rate limit exceeded. Please try again later.",
            "HttpStatusCode": 429,
            "ClientIdHeader": "ClientId"
        }
    }
}